<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PomodoroApp.Views.Knowledge"
             xmlns:viewmodels="clr-namespace:PomodoroApp.ViewModels"
             x:DataType="viewmodels:KnowledgeViewModel"
             Title="Tomato Knowledge"
             BackgroundColor="#FFF8E1">

    <ContentPage.BindingContext>
        <viewmodels:KnowledgeViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="25">

            <Image
                Source="tomato.png"
                HeightRequest="120"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="Tomato logo for Pomodoro app" />

            <Label
                Text="Tomato Knowledge"
                Style="{StaticResource Headline}"
                FontSize="24"
                TextColor="#FF6347"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Tomato Knowledge page title" />

            <Label
                Text="Inspire-se com conselhos de produtividade"
                Style="{StaticResource SubHeadline}"
                TextColor="#4CAF50"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Descrição da página Tomato Knowledge" />

            <Frame
                CornerRadius="10"
                Padding="15"
                BackgroundColor="White"
                HasShadow="True"
                Margin="0,10">

                <Button
                    x:Name="AcquireKnowledgeButton"
                    Text="Obter Conhecimento do Tomate"
                    Command="{Binding AcquireKnowledgeCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    BackgroundColor="#FF6347"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Padding="15,10"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Obtém um conselho de produtividade aleatório" />
            </Frame>

            <Frame
                x:Name="AdviceFrame"
                CornerRadius="10"
                Padding="15"
                BackgroundColor="White"
                HasShadow="True"
                Margin="0,10">
                <Label
                    x:Name="AdviceLabel"
                    Text="{Binding AdviceText}"
                    FontSize="16"
                    TextColor="#FF6347"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Conselho de produtividade aleatório" />
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>