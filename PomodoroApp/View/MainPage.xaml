<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PomodoroApp.Views.MainPage"
             xmlns:viewmodels="clr-namespace:PomodoroApp.ViewModels"
             x:DataType="viewmodels:MainViewModel"
             Title="Pomodoro Timer"
             BackgroundColor="#FFF8E1">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,20" Spacing="25">
            <Image
                Source="tomato.png"
                HeightRequest="120"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="Tomato logo for Pomodoro app" />

            <Label
                Text="Pomodoro Timer"
                Style="{StaticResource Headline}"
                FontSize="24"
                TextColor="#FF6347"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Main title of the Pomodoro Timer app" />

            <Label
                Text="Aumente sua produtividade com a técnica Pomodoro"
                Style="{StaticResource SubHeadline}"
                TextColor="#4CAF50"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Descrição da técnica Pomodoro para produtividade" />

            <Frame
                CornerRadius="10"
                Padding="15"
                BackgroundColor="White"
                HasShadow="True"
                Margin="0,10">
                <Label
                    Text="{Binding TimerText}"
                    FontSize="48"
                    TextColor="#FF6347"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Tempo restante atual no temporizador Pomodoro" />
            </Frame>

            <Frame
                CornerRadius="10"
                Padding="15"
                BackgroundColor="White"
                HasShadow="True"
                Margin="0,10">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Button
                        Text="Iniciar"
                        Command="{Binding StartCommand}"
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                        BackgroundColor="#FF6347"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15,10"
                        SemanticProperties.Hint="Inicia o temporizador Pomodoro" />
                    <Button
                        Text="Pausar"
                        Command="{Binding PauseCommand}"
                        IsEnabled="{Binding IsRunning}"
                        BackgroundColor="#FF6347"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15,10"
                        SemanticProperties.Hint="Pausa o temporizador Pomodoro" />
                    <Button
                        Text="Reiniciar"
                        Command="{Binding ResetCommand}"
                        BackgroundColor="#FF6347"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15,10"
                        SemanticProperties.Hint="Reinicia o temporizador Pomodoro" />
                </HorizontalStackLayout>
            </Frame>

            <Button
                Text="Configurações"
                Command="{Binding GoToSettingsCommand}"
                HorizontalOptions="Center"
                Margin="0,20"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="8"
                Padding="15,10"
                SemanticProperties.Hint="Navegar para a página de configurações" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>