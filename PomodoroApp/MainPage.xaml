<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PomodoroApp.MainPage"
             Title="Pomodoro Timer"
             BackgroundColor="#FFF8E1">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="25">
            <!-- App Logo -->
            <Image
                Source="tomato.png"
                HeightRequest="120"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="Tomato logo for Pomodoro app" />

            <!-- Title -->
            <Label
                Text="Pomodoro Timer"
                Style="{StaticResource Headline}"
                FontSize="24"
                TextColor="#FF6347"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Main title of the Pomodoro Timer app" />

            <!-- Subtitle -->
            <Label
                Text="Boost your productivity with the Pomodoro technique"
                Style="{StaticResource SubHeadline}"
                TextColor="#4CAF50"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Description of the Pomodoro technique for productivity" />

            <!-- Timer Display -->
            <Frame
                CornerRadius="10"
                Padding="15"
                BackgroundColor="White"
                HasShadow="True"
                Margin="0,10">
                <Label
                    x:Name="TimerLabel"
                    Text="25:00"
                    FontSize="48"
                    TextColor="#FF6347"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Current time remaining in the Pomodoro timer" />
            </Frame>

            <!-- Timer Controls -->
            <Frame
                CornerRadius="10"
                Padding="15"
                BackgroundColor="White"
                HasShadow="True"
                Margin="0,10">
                <HorizontalStackLayout
                    Spacing="15"
                    HorizontalOptions="Center">
                    <Button
                        x:Name="StartButton"
                        Text="Start"
                        Clicked="StartTimer_Clicked"
                        BackgroundColor="#FF6347"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15,10"
                        SemanticProperties.Hint="Starts the Pomodoro timer" />
                    <Button
                        x:Name="PauseButton"
                        Text="Pause"
                        Clicked="PauseTimer_Clicked"
                        BackgroundColor="#FF6347"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15,10"
                        IsEnabled="False"
                        SemanticProperties.Hint="Pauses the Pomodoro timer" />
                    <Button
                        x:Name="ResetButton"
                        Text="Reset"
                        Clicked="ResetTimer_Clicked"
                        BackgroundColor="#FF6347"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15,10"
                        IsEnabled="False"
                        SemanticProperties.Hint="Resets the Pomodoro timer" />
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>