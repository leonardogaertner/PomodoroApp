<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="PomodoroApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:PomodoroApp"
       Title="PomodoroApp"
       Shell.FlyoutBehavior="Disabled"
       Shell.BackgroundColor="#FFF8E1">
    <Shell.FlyoutHeader>
        <Frame
            CornerRadius="10"
            Padding="15"
            BackgroundColor="White"
            HasShadow="True"
            Margin="10">
            <VerticalStackLayout Spacing="10">
                <Image Source="tomato.png" WidthRequest="100" Aspect="AspectFit" SemanticProperties.Description="Tomato logo for Pomodoro app" />
                <Label Text="Pomodoro Power" Style="{StaticResource Headline}" FontSize="24" TextColor="#FF6347" HorizontalTextAlignment="Center" SemanticProperties.Description="Pomodoro app header" />
            </VerticalStackLayout>
        </Frame>
    </Shell.FlyoutHeader>
    <Shell.FlyoutFooter>
        <Frame
            CornerRadius="10"
            Padding="15"
            BackgroundColor="White"
            HasShadow="True"
            Margin="10">
            <VerticalStackLayout Spacing="10">
                <Image Source="tomato.png" WidthRequest="100" Aspect="AspectFit" SemanticProperties.Description="Tomato logo for Pomodoro app" />
                <Label Text="Stay Juicy!" Style="{StaticResource SubHeadline}" TextColor="#4CAF50" HorizontalTextAlignment="Center" SemanticProperties.Description="Pomodoro app footer" />
            </VerticalStackLayout>
        </Frame>
    </Shell.FlyoutFooter>
    <Shell.ItemTemplate>
        <DataTemplate>
            <Frame
                CornerRadius="10"
                Padding="10"
                BackgroundColor="White"
                HasShadow="True"
                Margin="5">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" VerticalOptions="Center">
                    <Image Source="{Binding FlyoutIcon}" WidthRequest="40" HeightRequest="40" VerticalOptions="Center" SemanticProperties.Description="Navigation icon" />
                    <Label Grid.Column="1" Text="{Binding Title}" Style="{StaticResource Headline}" TextColor="#FF6347" VerticalOptions="Center" SemanticProperties.Description="Navigation item title" />
                </Grid>
            </Frame>
        </DataTemplate>
    </Shell.ItemTemplate>
    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Timer" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" Icon="tomato.png" />
        <ShellContent Title="Knowledge" ContentTemplate="{DataTemplate local:Knowledge}" Route="Knowledge" Icon="tomato.png" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:Setup}" Route="Setup" Icon="tomato.png" />
    </FlyoutItem>
</Shell>